<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:backgroundTint="#F8F8F8"
        android:layout_marginHorizontal="10dp">
        <FrameLayout
            android:background="#FF0000"
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date: " />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sd"
                android:text="14/04/2022"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@+id/start_date"
                android:gravity="end"
                android:text="End Date: " />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ed"
                android:text="14/04/2022"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_date"
                android:layout_marginTop="10dp"
                android:text="Duration: " />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_date"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tn"
                android:text="5"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/duration"
                android:layout_below="@+id/end_date"
                android:gravity="end"
                android:text="Total Fees: " />

            <TextView
                android:id="@+id/totalfees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tf"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/end_date"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="5000" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/totalfees"
                android:layout_marginVertical="10dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learner Name: " />

                <TextView
                    android:id="@+id/learner_fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ln"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/adr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln"
                    android:layout_marginTop="7dp"
                    android:text="Address: " />

                <TextView
                    android:id="@+id/learner_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/adr"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adr"
                    android:layout_marginTop="7dp"
                    android:text="Email: " />

                <TextView
                    android:id="@+id/learner_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adr"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/ea"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/pn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ea"
                    android:layout_marginTop="7dp"
                    android:text="Phone number: " />

                <TextView
                    android:id="@+id/learner_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ea"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/pn"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_complete"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learner_phone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Complete Session"
                    android:textColor="@color/errorcolor"
                    app:icon="@drawable/ic_baseline_check_circle_outline_24"
                    app:iconTint="@color/errorcolor" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>